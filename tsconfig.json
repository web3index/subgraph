{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "types": ["@graphprotocol/graph-ts", "node"],
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./build",
    "rootDirs": ["src", "generated"],
    "baseUrl": ".",
    "paths": {
      "../generated/*": ["generated/*"],
      "../../thegraph/abis/*": ["src/thegraph/abis/*"]
    }
  },
  "include": [
    "src/**/*",
    "generated/**/*"
  ],
  "exclude": [
    "node_modules",
    "build"
  ]
}
